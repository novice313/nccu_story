<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <!--
           <Spinner
          android:id="@+id/language_spinner"
          android:layout_width="wrap_content"
          android:layout_height="39dp"
          android:drawSelectorOnTop="true" />
    -->

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_upload"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:layout_weight="0.5"
        android:ems="10"
        android:hint="#請輸入Keyword(標題)" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="下一步" 
        android:textColor="#1c1f87"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_weight="0.5"
        android:layout_alignTop="@+id/personal"
        android:layout_toEndOf="@+id/personal"
        android:ems="10"
        android:textColor="#1c1f87" />

    <ImageView
        android:id="@+id/personal"
        android:layout_width="80px"
        android:layout_height="80px"
        android:src="@drawable/personal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/content"
        android:layout_marginBottom="81dp"
        android:layout_weight="5"
        />

   <!--  <ImageView
        android:id="@+id/gray_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:src="@drawable/gray_background" />
         -->
    
    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/username"
        android:layout_marginTop="35dp"
        android:layout_weight="2"
        android:ems="10"
        android:hint="請輸入內容" />

    <ImageView
        android:id="@+id/add_camera"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/camera_no" />

    <ImageView
        android:id="@+id/add_photo"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/personal"
        android:src="@drawable/storage_no" />

</RelativeLayout>