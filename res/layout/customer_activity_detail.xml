<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.parse.ParseImageView
        android:id="@+id/customer_activity_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/customer_activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_activity_image"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:scrollbars="vertical"
        android:singleLine="false"    
        android:maxLines="7"
         android:width="250px"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
   <!--  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:text="音樂暫停"
    android:id="@+id/StopButton"
    />
     -->

    <ListView
        android:id="@+id/customer_mp3_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_activity_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

    </ListView>

</RelativeLayout>